extends layout

block content
    a(href=linkToGame)= boardGame.title
    img.boardGameImage(src=boardGame.image)
    //- NTS: insert category if doing categories
    form(action=`/boardgames/${boardGame.id}/reviews/new` method="post")
        input(type="hidden" name="_csrf" value=csrfToken)
        label(for="comment") What did you think?
        textarea(placeholder="Enter your review" name="comment")
        button(type="submit") Post
